<?xml version="1.0"?>
<config>
	  <sections>
		<bannerslider translate="label" module="bannerslider">                    
		<label>Banner Slider Configuration</label>
		<tab>catalog</tab>
		<frontend_type>text</frontend_type>
		<sort_order>0</sort_order>
		<show_in_default>1</show_in_default>
		<show_in_website>1</show_in_website>
		<show_in_store>1</show_in_store>            
		<groups>
		  <general translate="label"> 
			  <label>Banner Slider Enable/Disable</label>
			  <frontend_type>text</frontend_type>
			  <sort_order>1</sort_order>
			  <show_in_default>1</show_in_default>
			  <show_in_website>1</show_in_website>
			  <show_in_store>1</show_in_store>
			  <fields>
					<enable translate="label">
						<label>Enable Module</label>
						<frontend_type>select</frontend_type>
						<source_model>adminhtml/system_config_source_yesno</source_model>
						<sort_order>1</sort_order>
						<show_in_default>1</show_in_default>
						<show_in_website>1</show_in_website>
						<show_in_store>1</show_in_store>
					</enable>
			   </fields>
		   </general>
		   <sliderconfig translate="label"> 
			  <label>Slider Configuration</label>
			  <frontend_type>text</frontend_type>
			  <sort_order>2</sort_order>
			  <show_in_default>1</show_in_default>
			  <show_in_website>1</show_in_website>
			  <show_in_store>1</show_in_store>
			  <fields>
			  		<responsive translate="label">
						<label>Responsive</label>
						<frontend_type>select</frontend_type>
						<source_model>bannerslider/system_config_source_status</source_model>
						<sort_order>1</sort_order>
						<show_in_default>1</show_in_default>
						<show_in_website>1</show_in_website>
						<show_in_store>1</show_in_store>
					</responsive>
					<mode translate="label">
						<label>Mode</label>
						<frontend_type>select</frontend_type>
						<source_model>bannerslider/system_config_source_mode</source_model>
						<sort_order>2</sort_order>
						<show_in_default>1</show_in_default>
						<show_in_website>1</show_in_website>
						<show_in_store>1</show_in_store>
					</mode>
					<speed translate="label">
						<label>Speed</label>
						<frontend_type>text</frontend_type>
						<sort_order>3</sort_order>
						<show_in_default>1</show_in_default>
						<show_in_website>1</show_in_website>
						<show_in_store>1</show_in_store>
						<comment>Slide transition duration (in ms)</comment>
					</speed>
					<auto translate="label">
						<label>Auto</label>
						<frontend_type>select</frontend_type>
						<source_model>bannerslider/system_config_source_status</source_model>
						<sort_order>4</sort_order>
						<show_in_default>1</show_in_default>
						<show_in_website>1</show_in_website>
						<show_in_store>1</show_in_store>
					</auto>
					<pause translate="label">
						<label>Pause</label>
						<frontend_type>text</frontend_type>
						<sort_order>5</sort_order>
						<show_in_default>1</show_in_default>
						<show_in_website>1</show_in_website>
						<show_in_store>1</show_in_store>
						<comment>The amount of time (in ms) between each auto transition</comment>
					</pause>
					<autoHover translate="label">
						<label>Auto Hover</label>
						<frontend_type>select</frontend_type>
						<source_model>bannerslider/system_config_source_status</source_model>
						<sort_order>6</sort_order>
						<show_in_default>1</show_in_default>
						<show_in_website>1</show_in_website>
						<show_in_store>1</show_in_store>
					</autoHover>
					
					<pager translate="label">
						<label>Pager</label>
						<frontend_type>select</frontend_type>
						<source_model>bannerslider/system_config_source_status</source_model>
						<sort_order>7</sort_order>
						<show_in_default>1</show_in_default>
						<show_in_website>1</show_in_website>
						<show_in_store>1</show_in_store>
					</pager>
					<controls translate="label">
						<label>Controls</label>
						<frontend_type>select</frontend_type>
						<source_model>bannerslider/system_config_source_status</source_model>
						<sort_order>8</sort_order>
						<show_in_default>1</show_in_default>
						<show_in_website>1</show_in_website>
						<show_in_store>1</show_in_store>
						<comment>If true, "Next" / "Prev" controls will be added</comment>
					</controls>
					<captions translate="label">
						<label>Captions</label>
						<frontend_type>select</frontend_type>
						<source_model>bannerslider/system_config_source_status</source_model>
						<sort_order>9</sort_order>
						<show_in_default>1</show_in_default>
						<show_in_website>1</show_in_website>
						<show_in_store>1</show_in_store>
						<comment>Include image captions. Captions are derived from the image's title attribute</comment>
					</captions>
					<orderby translate="label">
						<label>Order By</label>
						<frontend_type>select</frontend_type>
						<source_model>bannerslider/system_config_source_order</source_model>
						<sort_order>10</sort_order>
						<show_in_default>1</show_in_default>
						<show_in_website>1</show_in_website>
						<show_in_store>1</show_in_store>
					</orderby>	
					
			   </fields>
		   </sliderconfig>
		   <jquery translate="label">
				<label>jQuery load from Banner Slider module</label>
				  <frontend_type>text</frontend_type>
				  <sort_order>5</sort_order>
				  <show_in_default>1</show_in_default>
				  <show_in_website>1</show_in_website>
				  <show_in_store>1</show_in_store>
				<fields>
					<enable translate="label">
						<label>Enable</label>
						<frontend_type>select</frontend_type>
						<source_model>adminhtml/system_config_source_yesno</source_model>
						<sort_order>1</sort_order>
						<show_in_default>1</show_in_default>
						<show_in_website>1</show_in_website>
						<show_in_store>1</show_in_store>
						<comment>Note: If you getting javascript error then please remove jQuery from magiframe.xml and added jQuery above prototype.js in page.xml</comment>
					</enable>
				</fields>
			</jquery>
		    <ginfo translate="label"> 
			<label>Configuration Information</label>
			<comment><![CDATA[<div style="padding:3px;">
				<p><b>Configuration in CMS page content</b></p>
				<ul>
				  <li>Setup block permission Go to Admin->System->Permissions->Blocks->Add New Block</li>
				  <li>Block: bannerslider/index</li>
				  <li>Page Content: {{block type="bannerslider/index" name="bannerslider_index" template="bannerslider/index.phtml"}}</li>
				</ul>
				<p><b>Configuration in XML template</b></p>
				<ul>
				  <li>Open XML template</li>
				  <li>Add Block: &lt;block type="bannerslider/index" name="bannerslider_index" template="bannerslider/index.phtml" /&gt;</li>
				</ul>										
			   </div>]]></comment>
			<frontend_type>text</frontend_type>
			<sort_order>6</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			</ginfo>
		</groups>
		  
		
		</bannerslider>
	  </sections>
</config>