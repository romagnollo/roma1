<?xml version="1.0"?>   
<layout version="0.1.0">
	<default>
		<reference name="head">
			<action ifconfig="bannerslider/jquery/enable" method="addItem"><type>skin_js</type><name>js/bannerslider/jquery.min.js</name></action>
			<action ifconfig="bannerslider/general/enable" method="addItem"><type>skin_js</type><name>js/bannerslider/jquery.bxslider.js</name></action>
			<action ifconfig="bannerslider/general/enable" method="addItem"><type>skin_css</type><name>css/bannerslider/jquery.bxslider.css</name></action>
			<action ifconfig="bannerslider/general/enable" method="addItem"><type>skin_css</type><name>css/bannerslider/bannerslider.css</name></action>
			
		</reference>
    </default>
	
	<cms_index_index>
		<reference name="content">
			<block type="bannerslider/index" name="bannerslider_index" as="bannerslider" before="-" template="bannerslider/index.phtml"/> 
		</reference>
	</cms_index_index>
</layout>   
	